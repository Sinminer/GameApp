<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".game.LightFragment">


    <Button
        android:id="@+id/light1"
        android:layout_width="192dp"
        android:layout_height="202dp"
        android:background="@color/Black"
        android:onClick="onClick"
        app:layout_constraintBottom_toTopOf="@+id/light3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/light2"
        android:layout_width="192dp"
        android:layout_height="200dp"
        android:layout_marginStart="210dp"
        android:layout_marginBottom="2dp"
        android:background="@color/Black"
        android:onClick="onClick"
        app:layout_constraintBottom_toTopOf="@+id/light4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/light1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/light3"
        android:layout_width="192dp"
        android:layout_height="211dp"
        android:background="@color/Black"
        android:onClick="onClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/light4"
        android:layout_width="192dp"
        android:layout_height="210dp"
        android:background="@color/Black"
        android:onClick="onClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>